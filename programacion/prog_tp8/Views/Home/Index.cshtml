@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Las series de info !!!</h1>
</div>
@{
  foreach (Series objSerie in ViewBag.Serie)
  {
    <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="@objSerie.ImagenSerie" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">@objSerie.Nombre</h5>
    <p class="card-text"></p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalSerie" onclick="MostrarTemporadas(@objSerie.IdSerie, '@objSerie.Nombre')">Temporadas</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalSerie" onclick="MostrarActores(@objSerie.IdSerie,'@objSerie.Nombre')">Actores</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalSerie" onclick="MostrarMasInfo(@objSerie.IdSerie)">Sinoupsis</button>
  </div>
</div>
  }
}




<div class="modal fade" id="ModalSerie" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="Titulo-Modal"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="ContenidoModal"></div>
        <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>